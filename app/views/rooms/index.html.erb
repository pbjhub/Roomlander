
<%= render "layouts/navbar" %>

<p id="notice" ><%= notice %></p>



<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Price</th> 
      <th>Description</th>
      <th>Home</th>
      <th>Dep</th>
      <th>Garage</th>
      <th>Girls</th>
      <th>Boys</th>
      <th>Animals</th>
      <th>Nanimals</th>
      <th>Smoke</th>
      <th>Nsmoke</th>
      <th>Urgent</th>
      <th>Quick</th>
      <th>Bathroom</th>
      <th>Servinc</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.price %></td>
        <td><%= room.description %></td>
        <td><%= room.home %></td>
        <td><%= room.dep %></td>
        <td><%= room.garage %></td>
        <td><%= room.girls %></td>
        <td><%= room.boys %></td>
        <td><%= room.animals %></td>
        <td><%= room.nanimals %></td>
        <td><%= room.smoke %></td>
        <td><%= room.nsmoke %></td>
        <td><%= room.urgent %></td>
        <td><%= room.quick %></td>
        <td><%= room.bathroom %></td>
        <td><%= room.servinc %></td>
        <td><%= room.location %></td>
        <td><%= room.user.name %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
